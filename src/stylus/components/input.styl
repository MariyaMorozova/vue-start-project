.input
	box-sizing border-box
	background #f1f5f9
	border none
	border-radius 5px
	outline none

	font-family 'Ubuntu', arial
	font-size 13px
	color: #666

	padding 8px 16px
	width 100%

	&:focus
	&:hover
		color #000
		border 1px solid #c3c7cb
		padding 7px 15px

	&:-webkit-autofill
		box-shadow: inset 0 0 0 50px #f1f5f9 !important;
		text-fill-color: #666 !important;
		color: #d8e0e6 !important;

	&--error
	&--error:focus
	&--error:hover
		border 1px solid #e6818d
		padding 7px 15px
