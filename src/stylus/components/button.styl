.button
	box-sizing border-box
	background #56adff
	border none
	border-radius 5px
	cursor: pointer
	outline none

	font-family 'Ubuntu', arial
	font-size 13px

	padding 8px 16px
	width 100%

	color: #fff

	&:hover
	&:focus
		border 1px solid #3b679d
		padding 7px 15px

	&-social
		background #f1f5f9
		color #999
		width 25px
		height 25px
		border none
		margin-right 8px
		cursor pointer
		outline none
		border-radius 3px

		&:hover
		&:focus
			border 1px solid #c3c7cb